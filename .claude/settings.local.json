{
  "permissions": {
    "allow": [
      "Bash(npm ls:*)"
    ],
    "deny": []
  },
  "autoApprove": {
    "enabled": true,
    "patterns": [
      "npm install *",
      "npm run *",
      "npm ci",
      "npx *",
      "yarn *",
      "pnpm *",
      "node *",
      "tsc *",
      "eslint *",
      "prettier *",
      "jest *",
      "vitest *",
      "vite *",
      "git add *",
      "git commit *",
      "git push *",
      "git pull *",
      "git checkout *",
      "git branch *",
      "firebase serve",
      "firebase emulators:*"
    ],
    "fileOperations": {
      "create": true,
      "edit": true,
      "delete": false
    },
    "maxFileSize": "10MB",
    "excludePatterns": [
      "*.env",
      "*.key",
      "*.pem",
      "*secret*",
      "*password*",
      ".git/**",
      ".kiro/**",
      ".claude/**"
    ]
  },
  "development": {
    "allowPackageInstall": true,
    "allowConfigEdit": true,
    "allowTestExecution": true,
    "allowBuildCommands": true,
    "allowLintFix": true,
    "allowFormatting": true,
    "allowGitOperations": true,
    "allowFirebaseCommands": true
  },
  "security": {
    "preventSystemCommands": true,
    "preventNetworkCommands": true,
    "preventPrivilegeEscalation": true,
    "preventSecretFileAccess": true,
    "logAllOperations": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/auto-workflow.ps1",
            "timeout": 300,
            "retryOnFailure": true
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "notification",
            "message": "ðŸ”„ Auto-workflow will run after file changes..."
          }
        ]
      }
    ]
  }
}